*******Hello.js************

import React from "react";

function Hello({isLoggedIn}){
    if(isLoggedIn){
        return <h1 style={{ color: "red", fontSize: "30px" ,fontFamily: "-moz-initial"}}>Hello, Sai</h1>
    }else{
        return <h1>Please Login</h1>
    }
};
export default Hello;


