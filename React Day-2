const CarsList=()=>{
  const cars=['BMW','Audi','Skoda','TATA','Mahindra'];
  return(
    <div>
      <h1>Car List</h1>
      <ul>
        {cars.map((cars, index)=>(
          <li key={index}>{cars}</li>
        ))}
      </ul>
    </div>
  )
}

export default CarsList;
